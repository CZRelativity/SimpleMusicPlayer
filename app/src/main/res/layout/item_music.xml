<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/colorPink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/card_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/card_tv_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_tv_id"
            android:text="歌曲名称"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/card_tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_tv_song"
            android:text="歌手名"
            android:textSize="14sp"
            android:layout_alignStart="@id/card_tv_song"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/card_tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/card_tv_singer"
            android:layout_alignTop="@id/card_tv_singer"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/card_tv_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_tv_line"
            android:layout_marginStart="10dp"
            android:text="专辑名称"
            android:textSize="14sp"
            android:layout_alignTop="@id/card_tv_line"/>
        <TextView
            android:id="@+id/card_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/card_tv_singer"
            android:text="4:30"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>